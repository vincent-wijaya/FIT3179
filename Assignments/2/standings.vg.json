{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Driver Standings Season Summary",
    "width": 600,
    "height": 300,
    "params": [
        {
            "name": "Year_selection",
            "value": 2021,
            "bind": {
                "input": "range",
                "min": 1950,
                "max": 2021,
                "step": 1,
                "name": "Year: "
            }
        }
    ],
    "data": {
        "url": "https://raw.githubusercontent.com/vincent-wijaya/FIT3179/main/Assignments/2/data/driver_standings.csv"
    },
    "transform": [
        {
            "lookup": "raceId", "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/vincent-wijaya/FIT3179/main/Assignments/2/data/races.csv",
                    "format": {
                        "type": "csv",
                        "parse": {"year": "number", "round": "number"}
                    }
                },
                "key": "raceId",
                "fields":["year", "round"]
            }
        },
        {
            "filter": "datum.year == Year_selection"
        },
        {
            "lookup": "driverId", "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/vincent-wijaya/FIT3179/main/Assignments/2/data/drivers.csv",
                    "format": {
                        "type": "csv",
                        "parse": {"fullname": "string"}
                    }
                },
                "key": "driverId",
                "fields": ["fullname"]
            }
        },
        {
            "calculate": "datum.fullname", "as": "Driver"
        },
        {
            "sort": [
                {"field": "points", "order": "descending"},
                {"field": "wins", "order": "descending"}
            ],
            "window": [{
                "op": "rank",
                "as": "rank"
            }],
            "groupby": ["raceId"]        
        },
        {
            "calculate": "toNumber(datum.round)", "as": "Round"
        },
        {
            "calculate": "toNumber(datum.position)", "as": "Position"
        }
    ],
    "layer": [
        {
            "params": [
                {
                    "name": "select", 
                    "select": {
                        "type": "point",
                        "on": "click",
                        "fields":["Driver"]
                    },
                    "bind": "legend"
                }
            ],
            "mark": {"type": "circle"},
            "encoding": {
                "x": 
                {
                    "field": "Round", 
                    "type": "ordinal", 
                    "axis": 
                    {
                        "domain": false, 
                        "ticks": false, 
                        "labelPadding": 10
                    }
                },
                "y": 
                {
                    "field": "Position", 
                    "type": "ordinal", 
                    "axis": 
                    {
                        "domain": false, 
                        "ticks": false, 
                        "labelPadding": 10
                    }
                },
                "color": {
                    "field": "Driver", "type": "nominal"
                },
                "strokeWidth": {
                    "condition": [
                        {
                            "param": "select",
                            "empty": false,
                            "value": 3
                        }
                    ],
                    "value": 1
                },
                "opacity": {
                    "condition": 
                    {
                        "param": "select",
                        "value": 1
                    },
                    "value": 0.2
                },
                "size": {
                    "condition":
                    {
                        "param": "select",
                        "empty": false,
                        "value": 50
                    },
                    "value": 20
                },
                "tooltip": [
                    {"field": "Driver", "type": "nominal", "title": "Driver"},
                    {"field": "Position", "type": "ordinal", "title": "Position"},
                    {"field": "points", "type": "quantitative", "title": "Points"}
                ]
            }
        },
        {
            "mark": {"type": "line", "orient": "vertical", "interpolate": "monotone"},
            "encoding": {
                "x": {"field": "Round", "type": "ordinal"},
                "y": {"field": "Position", "type": "ordinal"},
                "color": {
                    "field": "Driver", "type": "nominal"
                },
                "strokeWidth": {
                    "condition": [
                        {
                            "param": "select",
                            "empty": false,
                            "value": 4
                        }
                    ],
                    "value": 2
                },
                "opacity": {
                    "condition": 
                    {
                        "param": "select",
                        "empty": false,
                        "value": 1
                    },
                    "value": 0.2
                },
                "tooltip": [
                    {"field": "Driver", "type": "nominal", "title": "Driver"},
                    {"field": "Position", "type": "ordinal", "title": "Position"},
                    {"field": "points", "type": "quantitative", "title": "Points"}
                ]
            }
        }
    ],
    "config": {
        "title": {"font": "Formula1-Bold" },
        "text": {"font": "Formula1-Regular"},
        "axis": {"font": "Formula1-Regular"},
        "legend": {"font": "Formula1-Regular"}
    }
}


