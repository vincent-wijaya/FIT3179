{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Bump chart",
    "width": 300,
    "height": 300,
    "params": [
      {
        "name": "Year_selection",
        "value": 2021,
        "bind": {
            "input": "range",
            "min": 1950,
            "max": 2021,
            "step": 1,
            "name": "Year: "
        }
      },
      {
        "name": "driver_highlight",
        "select": {"type": "point", "fields": ["driver_fullname"]},
        "bind": "legend"
      }   
    ],
    "data": {
        "url": "https://raw.githubusercontent.com/vincent-wijaya/FIT3179/main/Assignments/2/data/driver_standings.csv"
    },
    "transform": [
        {
            "lookup": "raceId", "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/vincent-wijaya/FIT3179/main/Assignments/2/data/races.csv",
                    "format": {
                        "type": "csv",
                        "parse": {"year": "number", "round": "number"}
                    }
                },
                "key": "raceId",
                "fields":["year", "round"]
            }
        },
        {
            "filter": "datum.year == Year_selection"
        },
        {
            "lookup": "driverId", "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/vincent-wijaya/FIT3179/main/Assignments/2/data/drivers.csv",
                    "format": {
                        "type": "csv",
                        "parse": {"forename": "string", "surname": "string"}
                    }
                },
                "key": "driverId",
                "fields": ["forename", "surname"]
            }
        },
        {
            "calculate": "datum.forename + ' ' + datum.surname", "as": "driver_fullname"
        },
        {
            "sort": [
                {"field": "points", "order": "descending"},
                {"field": "wins", "order": "descending"}
            ],
            "window": [{
                "op": "rank",
                "as": "rank"
            }],
            "groupby": ["raceId"]        
        },
        {
            "calculate": "toNumber(datum.round)", "as": "Round"
        },
        {
            "calculate": "toNumber(datum.position)", "as": "Position"
        }
    ],
    "mark": {"type": "line", "orient": "vertical"},
    "encoding": {
        "x": {"field": "Round", "type": "ordinal"},
        "y": {"field": "Position", "type": "ordinal"},
        "color": {
            "field": "driver_fullname", "type": "nominal",
            "scale": {
                
            }
        },
        
        "opacity": {
            "condition": {"param": "driver_highlight", "value": 0.6},
            "value": 0.2
        }

    }
}


